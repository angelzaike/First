      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", rows: 8, placeholder: "Enter Message" %>
      </div>        
  <%=submit_tag "Send" %>   
  </div>
<% end %>

