<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <br><%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
    <br><div class="rating"></div><br>
  </p>
    <p>
      <br><%= f.submit "Submit" %><br>
    </p>
  <% end %>
<% end %>
<% end %>
