<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
       <%=image_tag product.image_url, width: 150, height: 150 %>
        <a href="#"><h1><%= link_to product.name, product%></h1></a>
        <p><%= product.description %></p>
        <p><%=product.color %></p>
        <strong><%=product.price %></strong><br><br><br>
      </div><!-- /col -->
    <% end %>
  </div>
</div>


<%= link_to 'New Product', new_product_path %>