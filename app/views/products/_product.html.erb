
<% cache product do %>
  <div class="row">
  <% products.each do |product| %>
    <div class="col-sm-2 col-md-4">
      <h1><%= link_to product.name, product %></h1>
      <p><%= product.description %></p>
      <p><%= product.color %></p>
      <strong>$ <%= product.price %></strong>
    </div>
  <% end %>
  <% end %>
</div>

<%= render 'comments' %> 



